<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              "retro-orange": "#ff6b35",
              "retro-pink": "#f7931e",
              "retro-purple": "#a663cc",
              "retro-blue": "#4ecdc4",
            },
          },
        },
      };
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 min-h-screen text-white font-mono"
  >
    <div class="container mx-auto px-6 py-8">
      <div class="text-center mb-12">
        <h1
          class="text-6xl font-bold bg-gradient-to-r from-retro-orange to-retro-pink bg-clip-text text-transparent mb-4"
        >
          File Uploader
        </h1>
        <div
          class="w-32 h-1 bg-gradient-to-r from-retro-orange to-retro-pink mx-auto rounded-full"
        ></div>
      </div>

      <% if(user) {%>
      <div class="max-w-4xl mx-auto">
        <div
          class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 shadow-2xl border border-white/20"
        >
          <h2 class="text-3xl font-bold text-retro-blue mb-6">
            Welcome back, <%= user.username %>! ğŸš€
          </h2>

          <!-- Folders Section -->
          <% if (user.folders.length > 0) {%>
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-retro-pink mb-4">
              You currently have <%= user.folders.length%> folders:
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% user.folders.forEach(folder => { %>
              <a
                href="/folder/<%= folder.id %>"
                class="block p-4 bg-gradient-to-r from-retro-purple/20 to-retro-blue/20 rounded-lg border border-retro-blue/30 hover:border-retro-orange/50 transition-all duration-300 hover:scale-105 hover:shadow-lg"
              >
                <div class="flex items-center">
                  <span class="text-2xl mr-3">ğŸ“</span>
                  <span class="font-semibold text-white"
                    ><%= folder.name %></span
                  >
                </div>
              </a>
              <% }); %>
            </div>
          </div>
          <% } else {%>
          <div class="text-center mb-8">
            <h3 class="text-xl font-semibold text-retro-pink mb-2">
              You don't have any folders yet
            </h3>
            <p class="text-gray-300">
              Create your first folder to get started!
            </p>
          </div>
          <% } %>

          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4 justify-center">
            <a
              href="/<%= user.id %>/create-folder"
              class="px-6 py-3 bg-gradient-to-r from-retro-orange to-retro-pink rounded-lg font-semibold text-white hover:shadow-lg transition-all duration-300 hover:scale-105"
            >
              â• Create New Folder
            </a>
            <a
              href="/logout"
              class="px-6 py-3 bg-gradient-to-r from-gray-600 to-gray-700 rounded-lg font-semibold text-white hover:shadow-lg transition-all duration-300 hover:scale-105"
            >
              ğŸšª Logout
            </a>
          </div>
        </div>
      </div>
      <% } else { %>
      <div class="max-w-md mx-auto text-center">
        <div
          class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 shadow-2xl border border-white/20"
        >
          <h2 class="text-2xl font-bold text-retro-blue mb-6">
            Login or sign up to upload files!
          </h2>
          <div class="space-y-4">
            <a
              href="/login"
              class="block w-full px-6 py-3 bg-gradient-to-r from-retro-blue to-retro-purple rounded-lg font-semibold text-white hover:shadow-lg transition-all duration-300 hover:scale-105"
            >
              ğŸ”‘ Login
            </a>
            <a
              href="/sign-up"
              class="block w-full px-6 py-3 bg-gradient-to-r from-retro-orange to-retro-pink rounded-lg font-semibold text-white hover:shadow-lg transition-all duration-300 hover:scale-105"
            >
              ğŸ“ Sign Up
            </a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
