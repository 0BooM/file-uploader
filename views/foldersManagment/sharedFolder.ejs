<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shared Folder: <%= folder.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              "retro-orange": "#ff6b35",
              "retro-pink": "#f7931e",
              "retro-purple": "#a663cc",
              "retro-blue": "#4ecdc4",
            },
          },
        },
      };
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 min-h-screen text-white font-mono"
  >
    <div class="container mx-auto px-6 py-8">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1
            class="text-5xl font-bold bg-gradient-to-r from-retro-orange to-retro-pink bg-clip-text text-transparent mb-4"
          >
            ðŸ”— <%= folder.name %>
          </h1>
          <div
            class="w-32 h-1 bg-gradient-to-r from-retro-orange to-retro-pink mx-auto rounded-full"
          ></div>
          <p class="text-gray-300 mt-4">
            Shared by: <strong><%= sharedBy %></strong>
          </p>
          <p class="text-sm text-gray-400">
            Expires: <%= expiresAt.toLocaleString() %>
          </p>
        </div>

        <!-- Files Section -->
        <div
          class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 shadow-2xl border border-white/20"
        >
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-retro-blue">
              Files in this folder (<%= folder.files.length %>)
            </h2>
          </div>

          <% if (folder.files && folder.files.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% folder.files.forEach(function(file) { %>
            <div
              class="p-4 bg-gradient-to-r from-retro-purple/20 to-retro-blue/20 rounded-lg border border-retro-blue/30 hover:border-retro-orange/50 transition-all duration-300 hover:scale-105 hover:shadow-lg"
            >
              <div class="flex items-center">
                <span class="text-2xl mr-3">ðŸ“„</span>
                <div>
                  <h3 class="font-semibold text-white"><%= file.name %></h3>
                  <p class="text-gray-300 text-sm">
                    Uploaded: <%= new
                    Date(file.uploadTime).toLocaleString("en-US", { dateStyle:
                    "medium", timeStyle: "short" }) %>
                  </p>
                </div>
              </div>
              <div class="mt-3 flex items-center justify-between">
                <a
                  href="<%= file.publicUrl %>"
                  target="_blank"
                  class="text-xs px-3 py-1 bg-retro-blue/20 text-retro-blue rounded-full hover:bg-retro-blue/30 transition-colors"
                >
                  Download
                </a>
                <p class="text-xs text-gray-400">
                  <%= (file.size / (1024 * 1024)).toFixed(2) %> MB
                </p>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <div class="text-center py-12">
            <div class="text-6xl mb-4">ðŸ“‚</div>
            <h3 class="text-xl font-semibold text-retro-pink mb-2">
              This folder is empty
            </h3>
            <p class="text-gray-300">
              No files have been uploaded to this folder yet.
            </p>
          </div>
          <% } %>
        </div>

        <!-- Footer info -->
        <div class="text-center mt-8">
          <div
            class="bg-white/5 backdrop-blur-lg rounded-lg p-4 border border-white/10"
          >
            <p class="text-sm text-gray-400">
              ðŸ”’ This is a temporary shared link. It will expire on <%=
              expiresAt.toLocaleString() %>.
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
